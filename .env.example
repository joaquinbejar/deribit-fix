# Deribit FIX Framework Configuration
# Copy this file to .env and set your actual values

# Authentication credentials
DERIBIT_USERNAME=your_username_here
DERIBIT_PASSWORD=your_password_here

# Connection settings
DERIBIT_HOST=test.deribit.com
DERIBIT_PORT=9881
DERIBIT_USE_SSL=false
DERIBIT_TEST_MODE=true

# Session configuration
DERIBIT_HEARTBEAT_INTERVAL=30
DERIBIT_CONNECTION_TIMEOUT=10
DERIBIT_RECONNECT_ATTEMPTS=3
DERIBIT_RECONNECT_DELAY=5

# Logging
DERIBIT_ENABLE_LOGGING=true
DERIBIT_LOG_LEVEL=info

# FIX session identifiers
DERIBIT_SENDER_COMP_ID=CLIENT
DERIBIT_TARGET_COMP_ID=DERIBITSERVER

# Order management
DERIBIT_CANCEL_ON_DISCONNECT=false

# Application registration (optional)
# DERIBIT_APP_ID=your_app_id
# DERIBIT_APP_SECRET=your_app_secret

# Production environment example:
# DERIBIT_HOST=www.deribit.com
# DERIBIT_PORT=9880
# DERIBIT_USE_SSL=false
# DERIBIT_TEST_MODE=false

# Production with SSL example:
# DERIBIT_HOST=www.deribit.com
# DERIBIT_PORT=9883
# DERIBIT_USE_SSL=true
# DERIBIT_TEST_MODE=false
